<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.swords.dutyreporting.PDLogginInActivity"
    android:background="#FFFFFF">

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="List of Residents"
        android:onClick="onResidentListClicked"
        android:textColor="#FFFFFF"
        android:background="#FF0000"
        android:id="@+id/button"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:textStyle="bold"
        android:textSize="16dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="Aggregate Resident Data"
        android:onClick="onAggregateDataClicked"
        android:textColor="#FFFFFF"
        android:background="#FF0000"
        android:id="@+id/button2"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="16dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:onClick="onViolationClicked"
        android:text="Violations"
        android:textColor="#FFFFFF"
        android:background="#FF0000"
        android:id="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:textStyle="bold"
        android:textSize="16dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:onClick="onLocationClicked"
        android:text="Location Data"
        android:textColor="#FFFFFF"
        android:background="#FF0000"
        android:id="@+id/button4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:textStyle="bold"
        android:textSize="16dp" />
</RelativeLayout>
