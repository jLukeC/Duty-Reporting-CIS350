<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.swords.dutyreporting.ChooseViolationStyle">

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="List of Violations"
        android:onClick="onListClicked"
        android:textColor="#FFFFFF"
        android:background="#FF0000"
        android:id="@+id/button"
        android:layout_marginTop="91dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Violation Frequency Chart"
        android:onClick="onFrequencyClicked"
        android:textColor="#FFFFFF"
        android:background="#FF0000"
        android:id="@+id/button2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:onClick="onPieClicked"
        android:text="Violation Pie Chart"
        android:textColor="#FFFFFF"
        android:background="#FF0000"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="107dp" />

</RelativeLayout>
