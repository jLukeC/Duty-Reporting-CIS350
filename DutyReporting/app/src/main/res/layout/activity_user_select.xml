<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingTop="@dimen/activity_vertical_margin" android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#FFFFFF">

    <TextView android:text="@string/user_select_description"
        android:id="@+id/user_select_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:typeface="monospace"
        android:textSize="25sp"
        android:layout_marginBottom="30dp"
        />

    <TextView android:text="As a list of check ins:"
        android:id="@+id/check_in_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:typeface="monospace"
        android:textSize="20sp"
        android:layout_below="@+id/user_select_title"
        />

    <Spinner android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/spinner" android:layout_centerHorizontal="true"
        android:focusable="false"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/check_in_title"
        />

    <TextView android:text="As a a graph of check ins:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/graph_title"
        android:textColor="#000000"
        android:typeface="monospace"
        android:textSize="20sp"
        android:layout_below="@+id/spinner"
        />

    <Spinner android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/spinner_graph" android:layout_centerHorizontal="true"
        android:focusable="false"
        android:layout_centerVertical="true"
        android:layout_below="@+id/graph_title"
        />
</RelativeLayout>
